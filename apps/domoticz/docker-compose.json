{
  "services": [
    {
      "name": "domoticz",
      "image": "domoticz/domoticz:latest",
      "environment": {
        "TZ": "Europe/Amsterdam"
      },
      "isMain": true,
      "internalPort": 8080,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/opt/domoticz/userdata"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/srv/media"
        }        
      ],
      "healthCheck": {
        "test": "curl --fail http://localhost || exit 1",
        "retries": 3,
        "interval": "60s",
        "timeout": "10s"
      }
    }
  ]
}

{
  "services": [
    {
      "name": "domoticz",
      "image": "domoticz/domoticz:latest",
      "isMain": true,
      "internalPort": 8080,
      "restart": "unless-stopped",
      "environment": {
        "TZ": "Europe/Paris"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/userdata",
          "containerPath": "/opt/domoticz/userdata",
          "readOnly": false
        }
      ],
      "devices": [

      ],
      "addPorts": [
        {
          "containerPort": 443,
          "hostPort": 8443,
          "tcp": true
        },
        {
          "containerPort": 6144,
          "hostPort": 6144,
          "tcp": true
        }
      ],
      "healthCheck": {
        "test": "curl --fail http://localhost:8080 || exit 1",
        "retries": 3,
        "interval": "30s",
        "timeout": "10s",
        "start_period": "30s"
      }
    }
  ]
}