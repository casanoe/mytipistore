{
  "services": [
    {
      "name": "nodered",
      "image": "nodered/node-red:4.0.9",
      "isMain": true,
      "internalPort": 1880,
      "network": "host",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/nodered"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/media",
          "containerPath": "/srv/media"
        }        
      ],
    }
  ],
  "$schema": "../dynamic-compose-schema.json"
}